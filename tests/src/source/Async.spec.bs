namespace tests
  @async(1000)
  @SGNode("NodeExample")
  @suite
  class AsyncNodeTests extends rooibos.BaseTestSuite

    '+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
    @describe("NodeExample tests")
    '+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++

    @beforeEach
    function beforeEachGroup()
      m.cleanStubs()
    end function

    @async
    @it("normal async test")
    function _()
      callbackFunction = sub()

        m.wasCalled = true
        m.testSuite.assertTrue(true)
        m.testSuite.done()
      end sub

      delayCall(0.02, callbackFunction) 'bs:disable-line 1140 LINT1001
    end function

    @async
    @it("async with stub call for source function")
    function _()
      getGlobalAA().wasCalled = false
      m.stubCall(globalFunctionWithoutReturn, function()
        m.wasCalled = true
        m.testSuite.assertTrue(true)
        m.testSuite.done()
      end function)

      delayCall(0.02, globalFunctionWithoutReturn) 'bs:disable-line 1140  LINT1001
    end function

    @async
    @it("async with stub call for node function")
    function _()
      m.stubCall(SetLabelText, function(text) 'bs:disable-line LINT1001
        m.wasCalled = true
        m.testSuite.assertEqual(text, "")
        m.testSuite.assertTrue(true)
        m.testSuite.done()
      end function)

      delayCall(0.02, SetLabelText) 'bs:disable-line 1140  LINT1001
    end function

    '+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
    @describe("Crashes in Node tests")
    '+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++

    @async
    @it("should capture the crash and fail")
    function _()
      throw "some error in node tests"
    end function

  end class
end namespace
