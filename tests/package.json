{
  "name": "rooibos-tests",
  "version": "4.1.1",
  "description": "simple, flexible, fun brightscript test framework for roku scenegraph apps - tests",
  "scripts": {
    "build": "bsc",
    "clean": "rm -rf build && rm -rf out",
    "watch": "npx bsc --project bsconfig.json --watch",
    "test": "source .env && npx ts-node ../bsc-plugin/src/cli.ts --host=$ROKU_HOST --password=$ROKU_PASSWORD"
  },
  "devDependencies": {
    "@rokucommunity/bslint": "^1.0.0-alpha.43",
    "brighterscript": "../../brighterscript",
    "commander": "^12.1.0",
    "dotenv": "^16.4.5",
    "roku-debug": "^0.21.10",
    "roku-deploy": "^4.0.0-alpha.1",
    "ts-node": "^10.7.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rokucommunity/rooibos.git"
  },
  "keywords": [
    "brightscript",
    "mvvm",
    "framework",
    "fun"
  ],
  "author": "George Cook",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rokucommunity/rooibos/issues"
  },
  "homepage": "https://github.com/rokucommunity/rooibos#readme"
}
