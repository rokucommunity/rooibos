{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "run",
      "program": "${workspaceFolder}/scripts/run.js",
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "name": "Run tests (current file)",
      "type": "node",
      "request": "launch",
      "smartStep": false,
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "sourceMaps": true,
      "args": [
        "${relativeFile}"
      ],
      "skipFiles": [
        "${workspaceFolder}/node_modules/**/*.js",
        "<node_internals>/**/*.js"
      ],
      "cwd": "${workspaceRoot}",
      "protocol": "inspector",
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}