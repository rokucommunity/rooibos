{
  "rootDir": "framework/src",
  "files": [
    "manifest",
    "source/**/*.*",
    "components/**/*.*"
  ],
  "autoImportComponentScript": true,
  "createPackage": false,
  "stagingFolderPath": "dist",
  "diagnosticFilters": [
    {
      "src": "**/roku_modules/**/*.*",
      "codes": [
        1107,
        1009
      ]
    }
  ],
  "plugins": [
    "@rokucommunity/bslint"
  ]
}