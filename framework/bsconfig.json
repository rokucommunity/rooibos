{
  "rootDir": "src",
  "files": ["manifest", "source/**/*.*"],
  "autoImportComponentScript": true,
  "createPackage": false,
  "stagingDir": "build",
  "diagnosticFilters": [{
    "files": ["**/roku_modules/**/*.*", "**/*.d.bs", "roku_modules/rooibos_promises/promises.d.bs"]
  }, {
    "codes": ["LINT2004", "LINT3003"],
    "files": ["**/ConsoleTestReporter.bs"]
  }],
  "plugins": [
    "../../bslint/src/index.ts"
  ],
  "require": [
    "ts-node/register"
  ],
  "sourceMap": true
}
