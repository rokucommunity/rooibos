{
  "rootDir": "src",
  "files": [
    "manifest",
    "source/**/*.*",
    "components/**/*.*"
  ],
  "autoImportComponentScript": true,
  "createPackage": false,
  "stagingDir": "dist",
  "diagnosticFilters": [{
    "files": ["**/roku_modules/**/*.*"]
  }, {
    "files": ["**/ConsoleTestReporter.bs"],
    "codes": ["LINT2004", "LINT3003"]
  }],
  "plugins": [
    "@rokucommunity/bslint"
  ]
}
